{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<h1> Inscription Sur le Site </h1>
<form>
{{ form_start(form) }}
{{ form_row(form.username, {'label':'Nom d\utilisateur','attr': {'placeholder':'Username'}}) }}
{{ form_row(form.firstName,{'label':'Prénom','attr': {'placeholder':'Prénom'}}) }}
{{ form_row(form.lastName,{'label':'Nom','attr': {'placeholder':'Nom'}}) }}
{{ form_row(form.email,{'label':'Adresse Email','attr': {'placeholder':'Email'}}) }}
{{ form_row(form.password,{'label':'Mot de Passe','attr': {'placeholder':'Password'}}) }}
{{ form_row(form.phoneNumber,{'label':'Numéro Du Téléphone','attr': {'placeholder':'Phone'}}) }}
